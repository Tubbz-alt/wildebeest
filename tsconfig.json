{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esnext", "dom", "es2015"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@generators/*": ["./generators*"],
      "@wildebeest*": ["./src*"]
    },
    "outDir": "./build",
    "types": ["node", "mocha"],
    "strict": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
    // "generators/**/*" TODO
  ],
  "exclude": ["node_modules", "build", "docs", "Internal-Documentation"]
}
