{
  "compilerOptions": {
    "incremental": true,
    /* Basic Options */
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esnext", "dom", "es2015"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@generators/*": ["./generators*"],
      "@wildebeest*": ["./src*"],
      "@mixins*": ["./mixins*"]
    },
    "outDir": "./build",
    "types": ["node", "mocha"],

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "mixins/**/*",
    "scripts/**/*"
    // "generators/**/*" TODO
  ]
}
